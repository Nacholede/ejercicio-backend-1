{{#if products.length}}
    {{#each products}}
    <div class="card" style="width: 18rem; margin-left: 20px; margin-bottom: 20px">
        <img src={{thumbnail}} class="card-img-top" alt="imagen">
        <div class="card-body">
            <h5 class="card-title">{{titulo}}</h5>
            <p class="card-text">{{descripcion}}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Precio: {{precio}}</li>
            <li class="list-group-item">Stock: {{stock}}</li>
            <li class="list-group-item">Categoria: {{categoria}}</li>
        </ul>
    </div>
    {{/each}}

{{else}}
<h2>Producto no encontrado</h2>
{{/if}}


